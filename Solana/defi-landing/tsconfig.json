{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node", "big.js", "bn.js"],   // üëà –¥–æ–±–∞–≤–∏–ª —Å—é–¥–∞
    "typeRoots": ["./node_modules/@types"]  // üëà –ø–æ–¥—Å–∫–∞–∑–∫–∞ TypeScript
  },
  "include": [
    "src"
  ]
}